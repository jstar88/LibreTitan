# Visitor
GET / controllers.Application.index()
                                
# Authentication
GET /login  controllers.Authentication.login()
POST /login controllers.Authentication.authenticate()
GET /logout controllers.Authentication.logout()

# Registration
GET /signup  controllers.Registration.signup()
POST /signup controllers.Registration.registers()
GET /delete  controllers.Registration.delete()

# Static files
GET     /assets/*file           controllers.Assets.at(path="/public", file)

# User rights validation
GET /:rights/:page/:method    controllers.Rights.validate(rights: String , page: String , method: String)